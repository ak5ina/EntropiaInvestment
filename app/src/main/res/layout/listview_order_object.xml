<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:minHeight="230dp"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/stock_background"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:clickable="true">

        <TextView
            android:id="@+id/my_order_sell_or_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order: "
            android:textSize="20dp"
            android:fontFamily="sans-serif-black"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/my_order_stockname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Stock: 1/100 Ancient Greece"
            android:textSize="18dp"
            android:fontFamily="sans-serif-black"
            />


        <TextView
            android:id="@+id/my_order_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount: "
            android:textSize="16dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="10dp"

            />

        <TextView
            android:id="@+id/my_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: | Total Price:"
            android:textSize="16dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="10dp"

            />
        <TextView
            android:id="@+id/my_order_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userID: Total Price:"
            android:textSize="16dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="10dp"

            />

        <TextView
            android:id="@+id/my_order_user_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user bank: "
            android:textSize="16dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="10dp"

            />


        <Button
            android:id="@+id/my_order_cancel"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cancel order"

            />

        <Button
            android:id="@+id/my_order_confirm"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="confirm order"

            />


    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/stock_background"
        android:clickable="true">

        <EditText
            android:id="@+id/text_add_intrest_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount of PEC pr Deed"
            android:textSize="16dp"
            android:gravity="center"
            android:inputType="number"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="10dp"
            />

        <Spinner
            android:id="@+id/spinnerStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/text_add_intrest_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Intrest Info"
            android:textSize="16dp"
            android:gravity="center"
            android:inputType="text"
            android:fontFamily="sans-serif-black"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/btn_confirm_new_intrest"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btn_background"
            android:text="Confirm intrest"
            android:layout_gravity="center"
            android:layout_weight="1"/>


        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"/>


    </LinearLayout>


    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />




</androidx.appcompat.widget.LinearLayoutCompat>